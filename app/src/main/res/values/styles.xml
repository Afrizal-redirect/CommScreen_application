<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#3486b8</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextHint">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">#D3D3D3</item>
        <item name="colorControlNormal">#D3D3D3</item>
        <item name="colorControlActivated">#D3D3D3</item>
        <item name="colorControlHighlight">#D3D3D3</item>
    </style>

</resources>